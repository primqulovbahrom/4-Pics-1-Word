<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151d32">

    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#1c2647"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="56dp"/>

    <!-- <LinearLayout
         android:layout_width="match_parent"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintLeft_toLeftOf="parent"
         android:layout_marginTop="56dp"
         android:background="#151d32"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintBottom_toBottomOf="@+id/guideline4"
         android:layout_height="0dp"/>-->

    <!-- <ImageView
         android:layout_width="match_parent"
         app:layout_constraintTop_toTopOf="@+id/guideline4"
         app:layout_constraintLeft_toLeftOf="parent"
         android:background="@drawable/background2"
         android:scaleType="centerCrop"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         android:layout_height="0dp"/>-->


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image2"
        android:layout_width="154dp"
        android:layout_height="154dp"
        android:layout_marginLeft="6dp"
        app:shapeAppearanceOverlay="@style/roundimageview"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@id/guideline2"
        tools:src="@drawable/img13_2" />

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="-4dp"
        android:background="@drawable/bg_images_background"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@id/guideline2" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image4"
        android:layout_width="154dp"
        android:layout_height="154dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="14dp"
        app:shapeAppearanceOverlay="@style/roundimageview"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/image2"
        tools:src="@drawable/img13_4" />

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_images_background"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/image2" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image1"
        android:layout_width="154dp"
        android:layout_height="154dp"
        android:scaleType="centerCrop"
        android:layout_marginRight="6dp"
        app:layout_constraintRight_toRightOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@id/guideline2"
        app:shapeAppearanceOverlay="@style/roundimageview"
        tools:src="@drawable/img13_1" />
    <!--<com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img_2"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/roundimageview"/>-->

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="-4dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/bg_images_background"
        app:layout_constraintRight_toRightOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@id/guideline2" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image3"
        android:layout_width="154dp"
        android:layout_height="154dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="6dp"
        app:shapeAppearanceOverlay="@style/roundimageview"
        app:layout_constraintRight_toRightOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/image1"
        tools:src="@drawable/img13_3" />

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/bg_images_background"
        app:layout_constraintRight_toRightOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/image1" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.93" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.73" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <LinearLayout
        android:id="@+id/answers"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/answer_glow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/guideline3"
        android:gravity="center">

        <TextView
            style="@style/variantStyle.answerStyle"
            tools:text="A" />

        <TextView
            style="@style/variantStyle.answerStyle"
            tools:text="B" />

        <TextView
            style="@style/variantStyle.answerStyle"
            tools:text="C" />

        <TextView
            style="@style/variantStyle.answerStyle"
            tools:text="D" />

        <TextView
            style="@style/variantStyle.answerStyle"
            tools:text="E" />

        <TextView
            style="@style/variantStyle.answerStyle"
            tools:text="F" />

        <TextView
            style="@style/variantStyle.answerStyle"
            tools:text="G" />

        <TextView
            style="@style/variantStyle.answerStyle"
            tools:text="H" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/variants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/guideline1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/variant1"
            style="@style/variantStyle"
            tools:text="A" />

        <TextView
            android:id="@+id/variant2"
            style="@style/variantStyle"
            android:layout_toEndOf="@id/variant1"
            tools:text="B" />

        <TextView
            android:id="@+id/variant3"
            style="@style/variantStyle"
            android:layout_toEndOf="@id/variant2"
            tools:text="C" />

        <TextView
            android:id="@+id/variant4"
            style="@style/variantStyle"
            android:layout_toEndOf="@id/variant3"
            tools:text="D" />

        <TextView
            android:id="@+id/variant5"
            style="@style/variantStyle"
            android:layout_toEndOf="@id/variant4"
            tools:text="E" />

        <TextView
            android:id="@+id/variant6"
            style="@style/variantStyle"
            android:layout_toEndOf="@id/variant5"
            tools:text="F" />

        <TextView
            android:id="@+id/variant7"
            style="@style/variantStyle"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@id/variant6"
            tools:text="G" />

        <TextView
            android:id="@+id/variant8"
            style="@style/variantStyle"
            android:layout_below="@id/variant1"
            tools:text="H" />

        <TextView
            android:id="@+id/variant9"
            style="@style/variantStyle"
            android:layout_below="@id/variant1"
            android:layout_toEndOf="@id/variant1"
            tools:text="I" />

        <TextView
            android:id="@+id/variant10"
            style="@style/variantStyle"
            android:layout_below="@id/variant1"
            android:layout_toEndOf="@id/variant2"
            tools:text="I" />

        <TextView
            android:id="@+id/variant11"
            style="@style/variantStyle"
            android:layout_below="@id/variant1"
            android:layout_toEndOf="@id/variant3"
            tools:text="J" />

        <TextView
            android:id="@+id/variant12"
            style="@style/variantStyle"
            android:layout_below="@id/variant1"
            android:layout_toEndOf="@id/variant4"
            tools:text="K" />

        <TextView
            android:id="@+id/variant13"
            style="@style/variantStyle"
            android:layout_below="@id/variant1"
            android:layout_toEndOf="@id/variant5"
            tools:text="L" />

        <TextView
            android:id="@+id/variant14"
            style="@style/variantStyle"
            android:layout_below="@id/variant1"
            android:layout_toEndOf="@id/variant6"
            tools:text="M" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>